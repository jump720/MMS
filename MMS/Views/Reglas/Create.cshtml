@model MMS.Models.ReglaViewModel

@{
    ViewBag.Title = "Rules";
    ViewBag.Subtitle = "Create";
    Layout = "~/Views/Shared/_LayoutTT.cshtml";
}

@section Styles
{
    @Styles.Render("~/bundles/cssSelect2")
}

@section Scripts
{
    @Scripts.Render("~/bundles/jsSelect2")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/PIV/Reglas.js"></script>
    <script src="/Content/dist/plugins/jquery-inputmask/jquery.inputmask.bundle.js"></script>

    <script type="text/javascript">
        $(function () {
            $.MMS.Reglas("create");
        });
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row clearfix">
        <div class="col-md-8">
            <div class="card" id="cardForm">
                <div class="header bg-blue">
                    <h2>
                        @ViewBag.Title <small>@ViewBag.Subtitle</small>
                    </h2>
                </div>
                <div class="body">
                    @Html.ValidationSummary(true, "", new { @class = "hide" })

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "form-select-label" })
                                @Html.DropDownListFor(model => model.Tipo, null, new { @class = "ms full-width" })
                                @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-8" id="itemContainer">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Regla.ItemId, htmlAttributes: new { @class = "form-select-label" })
                                @Html.DropDownListFor(model => model.Regla.ItemId, null, new { @class = "ms full-width" })
                                @Html.ValidationMessageFor(model => model.Regla.ItemId, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-4" id="brandContainer">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Regla.MarcaId, htmlAttributes: new { @class = "form-select-label" })
                                @Html.DropDownListFor(model => model.Regla.MarcaId, null, "", new { @class = "ms full-width" })
                                @Html.ValidationMessageFor(model => model.Regla.MarcaId, "", new { @class = "" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="material-icons">attach_money</i></span>
                                    <div class="form-line">
                                        @Html.EditorFor(model => model.Regla.Meta, new { htmlAttributes = new { @class = "form-control text-right" } })
                                        @Html.LabelFor(model => model.Regla.Meta, htmlAttributes: new { @class = "form-label" })
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.Regla.Meta, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group form-float">
                                <div class="input-group">
                                    <span class="input-group-addon">%</span>
                                    <div class="form-line">
                                        @Html.EditorFor(model => model.Regla.Porcentaje, new { htmlAttributes = new { @class = "form-control text-right" } })
                                        @Html.LabelFor(model => model.Regla.Porcentaje, htmlAttributes: new { @class = "form-label" })
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.Regla.Porcentaje, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            @Html.EditorFor(model => model.Regla.Activa)
                            @Html.LabelFor(model => model.Regla.Activa, htmlAttributes: new { @class = "fix-checkbox" })
                        </div>
                    </div>

                </div>
                <hr class="m-b-0 m-t--20" />
                <div class="body">
                    <input type="submit" value="Save" class="btn btn-primary waves-effect" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default waves-effect", @onclick = "redirToReturnSearch(this, event)" })
                </div>
            </div>
        </div>
    </div>
}