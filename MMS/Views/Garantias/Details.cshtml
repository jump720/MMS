
@model MMS.Models.GarantiaViewModel
@{
    ViewBag.Title = "Guarantee";
    ViewBag.Subtitle = "View";
    Layout = "~/Views/Shared/_LayoutTT.cshtml";

}
@section Styles
{
    @Styles.Render("~/bundles/cssSelect2")
    @Styles.Render("~/Content/Dropzone")
}

@section Scripts
{
    @Scripts.Render("~/bundles/jsDataTables")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Dropzone")

    @*<script src="http://code.jquery.com/ui/1.11.3/jquery-ui.js" type="text/javascript"></script>
        <script src="~/Scripts/Validate/jquery.validate.js" type="text/javascript"></script>*@

    @Scripts.Render("~/bundles/jsSelect2")
    @Scripts.Render("~/bundles/jsVue")
<script src="/Content/dist/plugins/jquery-inputmask/jquery.inputmask.bundle.js"></script>
    <script src="~/Scripts/WCSS/Garantias.js"></script>

    <script type="text/javascript">
        $(function () {
            checkValidationSummaryErrors();

            var dataItems = [ @foreach (var item in Model.Items)
            {

                <text>
                { id: @item.ItemId, text: @Html.Raw(Json.Encode(item.Items.Descripcion)), data: @Html.Raw(Json.Encode(item.Items)) },
                </text>
            }
            ];


            var dataMotivo = [ @foreach (var item in Model.Items)
            {

                <text>
                { id: @item.MotivoPQRSId, text: @Html.Raw(Json.Encode(item.MotivoPQRS.Nombre)), data: @Html.Raw(Json.Encode(item.MotivoPQRS)) },
                </text>
            }
            ];


            var dataCausa= [ @foreach (var m in ViewBag.CausaPQRS)
            {

                <text>
                { id: @m.Id, text: @Html.Raw(Json.Encode(m.Nombre)), data: @Html.Raw(Json.Encode(m)) },
                </text>
            }
            ];

            var files = [ @foreach (var file in Model.GarantiaArchivos)
            {

                <text>
                { order: @file.Order, FileName: @Html.Raw(Json.Encode(file.FileName)), New: false },
                </text>
            }
            ];

            var items = [
                 @foreach (var item in Model.Items)
            {<text>
                {
                    Id: @item.Id,
                    ItemId: @item.ItemId,
                    ItemDesc: `@item.Items.Codigo -  @Html.Raw(Json.Encode(item.Items.Descripcion))`,
                    Cantidad: `@item.Cantidad`,
                    Precio: `@Math.Round(item.Precio,0)`,
                    NroFactura: `@item.NroFactura`,
                    NroGuia: `@item.NroGuia`,
                    MotivoPQRSId: @Html.Raw(Json.Encode(item.MotivoPQRS)),
                    CausaPQRSId: @((item.CausaPQRS != null) ? Html.Raw(Json.Encode(item.CausaPQRS)) : Html.Raw(Json.Encode(new MMS.Models.CausaPQRS()))) ,
                    ComentarioAdicional:  @Html.Raw(Json.Encode(item.ComentarioAdicional)),
                    Estado: `@item.Estado`,
                    CantidadRecibida: `@item.CantidadRecibida`,
                    CantidadSubida: `@item.CantidadSubida`,
                    ComentarioEstadoMercancia:  @Html.Raw(Json.Encode(item.ComentarioEstadoMercancia)),
                    DocSoporte: `@item.DocSoporte`,
                    PrecioAsumido: `@Math.Round(item.PrecioAsumido ?? 0, 0)`,
                    EditButton: `@ViewData[$"has_pqrs_{Html.Raw(Json.Encode(Model.Garantia.Id))}_{Html.Raw(Json.Encode(item.Id))}_{Html.Raw(Json.Encode(item.MotivoPQRSId))}"]`,
                },

            </text>
            }
            ];
            $.MMS.Garantias("details", items, @Html.Raw(Json.Encode(Model.Garantia)), dataItems,dataMotivo,files,dataCausa);



        });
    </script>
}


<div class="row clearfix">
    <div class="col-md-12">
        <div class="card" id="cardForm">
            <div class="header bg-blue">
                <h2>
                    @ViewBag.Title (@Model.Garantia.NroTracking - @Model.Garantia.Estado)<small>@ViewBag.Subtitle</small>
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                            <i class="material-icons">attach_file</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" onclick="AttachFile()" class="waves-effect waves-block">Attach Files</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                @Html.ValidationSummary(false, "", new { @class = "hide" })
                @Html.HiddenFor(model => model.Garantia.Id)
                @Html.HiddenFor(model => model.Garantia.Estado)
                @Html.HiddenFor(model => model.Garantia.FechaCreacion)

                <div class="row clearfix">
                    <div class="col-md-5">
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.Garantia.ClienteId, new SelectList(new List<string>(), "", ""), new { @class = "ms full-width", @autofocus = "autofocus", @style = "width: 100%" })
