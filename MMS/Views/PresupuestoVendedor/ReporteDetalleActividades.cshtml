@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col s12">
            <div class="card">
                <nav>
                    <div class="nav-wrapper">
                        <div class="col s12" style="margin-left: 25px;">
                            <a href="~/PresupuestoVendedor/ReporteDetalleActividades" class="breadcrumb">Reporte de Actividades</a>
                        </div>
                    </div>
                </nav>
                <div class="card-content">
                    <span id="" class="red-text text-darken-2">@ViewBag.Error</span>
                    @Html.ValidationSummary(true, "", new { @class = "red-text text-accent-4" })
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s12 m6 l3">

                                @Html.LabelFor(model => model.ActividadId, new { @class = "" })
                                @Html.TextBoxFor(model => model.ActividadId, new { @class = "validate" })
                                @Html.ValidationMessageFor(model => model.ActividadId, "", new { @class = "red-text text-accent-4" })
                            </div>
                            <div class="input-field col s12 m6 l3">
                                @Html.LabelFor(model => model.ActividadTitulo, new { @class = "" })
                                @Html.TextBoxFor(model => model.ActividadTitulo, new { @class = "validate" })
                                @Html.ValidationMessageFor(model => model.ActividadTitulo, "", new { @class = "red-text text-accent-4" })
                            </div>
                            <div class="input-field col s12 m6 l3">
                                @Html.LabelFor(model => model.ClienteID, new { @class = "" })
                                @Html.TextBoxFor(model => model.ClienteID, new { @class = "validate" })
                                @Html.ValidationMessageFor(model => model.ClienteID, "", new { @class = "red-text text-accent-4" })
                            </div>
                            <div class="input-field col s12 m6 l3">
                                @Html.LabelFor(model => model.ClienteNombre, new { @class = "" })
                                @Html.TextBoxFor(model => model.ClienteNombre, new { @class = "validate" })
                                @Html.ValidationMessageFor(model => model.ClienteNombre, "", new { @class = "red-text text-accent-4" })
                            </div>
                            <input type="submit" value="Consultar" class="btn waves-effect light-blue accent-4" />
                        </div>
                    </form>
                    <table id="table" class="table-with-number display highlight cell-border compact hover responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th class="all">
                                    @Html.DisplayNameFor(model => model.ActividadId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ActividadTitulo)
                                </th>
                                <th>
                                    Estado
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.TableActividades)
                            {
                                <tr>
                                    <td class="details-control" onclick="_verOrdenDeActividad(this, '@item.ActividadId')"></td>
                                    <td>
                                        @item.ActividadId
                                    </td>
                                    <td>
                                        @item.ActividadTitulo
                                    </td>
                                    <td>
                                        @item.ActividadEstado
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
}