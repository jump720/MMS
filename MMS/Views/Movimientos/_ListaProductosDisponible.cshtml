@model  dynamic
@{
    Layout = null;
    

}

<script src="~/Scripts/DataTablesGeneral.js" type="text/javascript"></script>
@*<div id="_Modal" class="modal bottom-sheet">*@
    <div class="modal-content">
        <h4>Seleccione Movimiento </h4>
        <table id="modalTable" class="display highlight cell-border compact hover responsive nowrap" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        Mov
                    </th>
                    <th>
                        Producto
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Valor
                    </th>
                    <th>
                        Cant.
                    </th>
                    <th>
                        Disp.
                    </th>
                    <th>
                        Res.
                    </th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="5%" class="center-align">
                            <button style="transform: scaleY(0.7) scaleX(0.7)" id="BtnEliminar" type="button"
                                    class="btn-floating waves-effect waves-light green center-align"
                                    aria-hidden="true" onclick='selectMovimiento(@Html.Raw(Json.Encode(@item)));'>
                                <i class="material-icons center-align">done</i>
                            </button>
                        </td>
                        <td>
                            @item.GetType().GetProperty("MovimientoId").GetValue(item, null)  
                        </td>
                        <td>
                            @item.GetType().GetProperty("ProductoId").GetValue(item, null)
                        </td>
                        <td>
                            @item.GetType().GetProperty("ProductoDesc").GetValue(item, null)
                        </td>
                        <td>
                            @item.GetType().GetProperty("MovimientoFechaCrea").GetValue(item, null)
                        </td>
                        <td>
                            @item.GetType().GetProperty("MovimientoValor").GetValue(item, null)
                        </td>
                        <td>
                            @item.GetType().GetProperty("MovimientoCantidad").GetValue(item, null)
                        </td>
                        <td>
                            @item.GetType().GetProperty("MovimientoDisponible").GetValue(item, null)
                        </td>
                        <td>
                            @item.GetType().GetProperty("MovimientoReservado").GetValue(item, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <input id="btncancelar" type="button" value="Cerrar" class="btn waves-effect grey" onclick="$('#_Modal').closeModal();" />
    </div>

@*</div>*@