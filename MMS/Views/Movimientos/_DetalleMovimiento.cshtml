@model IEnumerable<MMS.Models.Movimiento>

@{
    Layout = null;
}
<script src="~/Scripts/DataTablesGeneral.js" type="text/javascript"></script>
<div class="modal fade" id="_Modal" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Detalle de Salidas </h4>
            </div>
            <div class="modal-body">
                <fieldset class="m-b-30">
                    <legend class="m-b-10 font-18">Entrada</legend>
                    <table class="responsive-table" width="100%">
                        <thead>
                            <tr>
                                <th>Nro Mov</th>
                                <th>Producto</th>
                                <th>Valor</th>
                                <th>Cant.</th>
                                <th>Disp.</th>
                                <th>Res.</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@ViewBag.movEntrada.MovimientoId</td>
                                <td>@ViewBag.movEntrada.ProductoId</td>
                                <td>@ViewBag.movEntrada.MovimientoValor</td>
                                <td>@ViewBag.movEntrada.MovimientoCantidad</td>
                                <td>@ViewBag.movEntrada.MovimientoDisponible</td>
                                <td>@ViewBag.movEntrada.MovimientoReservado</td>
                            </tr>
                        </tbody>
                    </table>
                </fieldset>

                <table id="modalTable" class="table table-condensed table-va-middle table-striped display highlight cell-border compact hover responsive nowrap table-bordered" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MovimientoId)
                            </th>
                            <th>
                                Tipo Mov.
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MovimientoEstado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MovimientoFechaCrea)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MovimientoFechaMod)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OrdenId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductoId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.producto.ProductoDesc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MovimientoCantidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MovimientoValor)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MovimientoId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tipoMovimiento.TipoMovimientoDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MovimientoEstado)
                                </td>
                                <td>
                                    @item.MovimientoFechaCrea.ToString("u").Substring(0, 10)
                                </td>
                                <td>
                                    @item.MovimientoFechaMod.ToString("u").Substring(0, 10)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrdenId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductoId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.producto.ProductoDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MovimientoCantidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MovimientoValor)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
