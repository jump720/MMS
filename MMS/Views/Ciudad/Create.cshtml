@model MMS.Models.Ciudad

@{
    ViewBag.Title = "City";
    ViewBag.Subtitle = "Create";
    Layout = "~/Views/Shared/_LayoutTT.cshtml";
}

@section Styles
{
    @Styles.Render("~/bundles/cssSelect2")
}

@section Scripts
{
    @Scripts.Render("~/bundles/jsSelect2")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Catalogos/Ubicaciones/Ciudades.js"></script>
    <script src="/Content/dist/plugins/jquery-inputmask/jquery.inputmask.bundle.js"></script>

    <script type="text/javascript">
        $(function () {
            checkValidationSummaryErrors();
            $.MMS.Ciudades("create");
        });
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row clearfix">
        <div class="col-md-12">
            <div class="card" id="cardForm">
                <div class="header bg-blue">
                    <h2>
                        @ViewBag.Title <small>@ViewBag.Subtitle</small>
                    </h2>
                </div>
                <div class="body">
                    @Html.ValidationSummary(true, "", new { @class = "red-text text-accent-4" })
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group form-float">
                                <div class="input-group">
                                    <div class="form-line">
                                        @Html.EditorFor(model => model.CiudadID, new { htmlAttributes = new { @class = "form-control text-right" } })
                                        @Html.LabelFor(model => model.CiudadID, htmlAttributes: new { @class = "form-label" })
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.CiudadID, "", new { @class = "" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-float">
                                <div class="input-group">
                                    <div class="form-line">
                                        @Html.EditorFor(model => model.CiudadDesc, new { htmlAttributes = new { @class = "form-control text-right" } })
                                        @Html.LabelFor(model => model.CiudadDesc, htmlAttributes: new { @class = "form-label" })
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.CiudadDesc, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-6" id="paisContainer">
                            <div class="form-group form-float">
                                <div class="input-group">
                                    <div class="form-line">
                                        @Html.LabelFor(model => model.PaisID, htmlAttributes: new { @class = "form-select-label" })
                                        @Html.DropDownList("PaisID", null, new { @class = "ms full-width", @onChange = "_DropDownInCascada()" })
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.PaisID, "", new { @class = "" })
                            </div>
                        </div>
                        <div class="col-md-6" id="dptoContainer">
                            <div class="form-group form-float">
                                <div class="input-group">
                                    <div class="form-line">
                                        @Html.LabelFor(model => model.DepartamentoID, htmlAttributes: new { @class = "form-select-label" })
                                        @Html.DropDownList("DepartamentoID", null, new { @class = "ms full-width" })
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.DepartamentoID, "", new { @class = "" })
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="m-b-0 m-t--20" />
                <div class="body">
                    <input type="submit" value="Save" class="btn btn-primary waves-effect" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default waves-effect", @onclick = "redirToReturnSearch(this, event)" })
                </div>
            </div>
        </div>
    </div>
}
