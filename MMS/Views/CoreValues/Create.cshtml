@model MMS.Models.CoreValue

@{
    ViewBag.Title = "Core Values";
    ViewBag.Subtitle = "Create";
    Layout = "~/Views/Shared/_LayoutTT.cshtml";
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Peak/CoreValues.js"></script>

    <script type="text/javascript">
        $(function () {
            $.MMS.CoreValues("create");
        });
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row clearfix">
        <div class="col-md-12">
            <div class="card" id="cardForm">
                <div class="header bg-blue">
                    <h2>
                        @ViewBag.Title <small>@ViewBag.Subtitle</small>
                    </h2>
                </div>
                <div class="body">
                    @Html.ValidationSummary(true, "", new { @class = "hide" })

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.Competencia, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.Competencia, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Competencia, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.Orden, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.Orden, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Orden, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            @Html.EditorFor(model => model.Activo)
                            @Html.LabelFor(model => model.Activo, htmlAttributes: new { @class = "fix-checkbox" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", @rows = "4" })
                                    @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Competencia, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextAreaFor(model => model.CompetenciaDescripcion, new { @class = "form-control", @rows = "4" })
                                    @Html.LabelFor(model => model.CompetenciaDescripcion, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.CompetenciaDescripcion, "", new { @class = "" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextAreaFor(model => model.HabilidadAlta, new { @class = "form-control", @rows = "15" })
                                    @Html.LabelFor(model => model.HabilidadAlta, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.HabilidadAlta, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextAreaFor(model => model.HabilidadMedia, new { @class = "form-control", @rows = "15" })
                                    @Html.LabelFor(model => model.HabilidadMedia, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.HabilidadMedia, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextAreaFor(model => model.HabilidadBaja, new { @class = "form-control", @rows = "15" })
                                    @Html.LabelFor(model => model.HabilidadBaja, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.HabilidadBaja, "", new { @class = "" })
                            </div>
                        </div>
                    </div>

                </div>
                <hr class="m-b-0 m-t--20" />
                <div class="body">
                    <input type="submit" value="Save" class="btn btn-primary waves-effect" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default waves-effect", @onclick = "redirToReturnSearch(this, event)" })
                </div>
            </div>
        </div>
    </div>
}