@model IEnumerable<MMS.Models.Actividad>

@{
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
    ViewBag.Title = "Atividades (Inserir)";
    ViewBag.Subtitle = "Lista";
    Layout = "~/Views/Shared/_LayoutTT.cshtml";
}

@section Styles
{
    @Styles.Render("~/bundles/cssDataTables")
}

@section Scripts
{
    @Scripts.Render("~/bundles/jsDataTables")
    @Scripts.Render("~/bundles/jqueryval")


    <script type="text/javascript">
        $(document).ready(function () {

            $('[data-toggle="tooltip"]').tooltip();

            dt = dataTablesIndex("tableDT", "/api/@controllerName/Index", "/@controllerName/Index",
                [
                    { data: "ActividadId" },
                    { data: "ActividadTitulo" },
                    { data: "Cliente" },
                    { data: "UsuarioIdElabora" },
                    { data: "ActividadEstado" },
                    { data: "ActividadFecha" },
                    {
                        data: null,
                        render: function (data, type, row) {

                            var result = `<a href='/@controllerName/Details/${row.ActividadId}' onclick="redirtWithReturnSearch(this, event)" class='btn-table btn-info btn-sm btn-sm-circle waves-circle waves-effect waves-float @ViewData[$"has_{controllerName}Details"]' data-toggle="tooltip" data-placement="top" title="Ver detalle"><i class='material-icons'>remove_red_eye</i></a>`;

                            if (row.ActividadEstado == "Abierto" || row.ActividadEstado == "Rechazado")
                                result += `<a href='/@controllerName/Edit/${row.ActividadId}' onclick="redirtWithReturnSearch(this, event)" class='btn-table btn-primary btn-sm btn-sm-circle waves-circle waves-effect waves-float @ViewData[$"has_{controllerName}Edit"]' data-toggle="tooltip" data-placement="top" title="Editar"><i class='material-icons'>mode_edit</i></a>`;


                            if (row.ActividadEstado == "Abierto" || row.ActividadEstado == "Rechazado")
                            result += `<a href='/@controllerName/Delete/${row.ActividadId}' onclick="redirtWithReturnSearch(this, event)" class='btn-table bg-red btn-sm btn-sm-circle waves-circle waves-effect waves-float @ViewData[$"has_{controllerName}Delete"]' data-toggle="tooltip" data-placement="top" title="Eliminar"><i class='material-icons'>delete</i></a>`;

                            if (row.ActividadEstado == "Abierto" || row.ActividadEstado == "Rechazado")
                                result += `<a href='/@controllerName/CambiaEstadoActividad?ActividadId=${row.ActividadId}&Estado=2' onclick="CambiarEstado(event,this.href);"  class='btn-table bg-indigo  btn-sm btn-sm-circle waves-circle waves-effect waves-float @ViewData[$"has_{controllerName}CambiaEstadoActividad"]' data-toggle="tooltip" data-placement="top" title="Enviar a aprobación"><i class='material-icons'>send</i></a>`;

                            
                            result += `<a href='/api/@controllerName/Duplicar/${row.ActividadId}' onclick="DuplicarActividad(event,this.href);" class='btn-table btn-primary btn-sm btn-sm-circle waves-circle waves-effect waves-float @ViewData[$"has_{controllerName}Duplicar"]' data-toggle="tooltip" data-placement="top" title="Duplicar"><i class='material-icons'>content_copy</i></a>`;

                            result += `<a href='/@controllerName/Report?archivo=PDF&filtro=${row.ActividadId}' onclick="redirtWithReturnSearch(this, event)" class='btn-table bg-amber btn-sm btn-sm-circle waves-circle waves-effect waves-float @ViewData[$"has_{controllerName}Report"]' data-toggle="tooltip" data-placement="top" title="PDF"><i class='material-icons'>picture_as_pdf</i></a>` ;

                            if (row.ActividadEstado == "Despachado")
                                result += `<a href='/@controllerName/ActividadCierre/${row.ActividadId}' onclick="showActividadCierreModal(event, this.href)" class='btn-table bg-teal btn-sm btn-sm-circle waves-circle waves-effect waves-float @ViewData[$"has_{controllerName}_ResetPassword"]' data-toggle="tooltip" data-placement="top" title="Cerrar actividad"><i class='material-icons'>check_circle</i></a>`;
                            return result;
                        }
                    }
                ],
                {
                    mainFilter: false,
                    filterControls: ["txtActividadId", "txtActividadTitulo", "txtClienteID", "txtUsuarioIdElabora", "txtActividadEstado", "txtActividadFecha"],
                    fnServerParams: function () {
                        return [
                            { name: "_actividadid", value: $('#txtActividadId').val() },
                            { name: "_actividadtitulo", value: $('#txtActividadTitulo').val() },
                            { name: "_clienteid", value: $('#txtClienteID').val() },
                            { name: "_usuarioidelabora", value: $('#txtUsuarioIdElabora').val() },
                            { name: "_actividadestado", value: $('#txtActividadEstado').val() },
                            { name: "_actividadfecha", value: $('#txtActividadFecha').val() },
                        ];
                    }
                });

        });


        function CambiarEstado(event,href) {
            /*  Abierto = 1,
            Pendiente = 2,
                Autorizado = 3,
                Despachado = 4,
                Ejecutado = 5,
                Rechazado = 6,
                PendienteTrade = 7 */
            event.preventDefault();
            sLoading();
            $.get(href)
                .done(function (result) {
                    if (result) {
                        msgSuccess("Se mando la actividad a autorizar correctamente");
                        //setTimeout(function () { window.location.href = '/Actividades' }, 1000);
                        dt.api().draw('page');
                    } else {
                        msgError("Error al cambiar de estado");
                    }
                })
                .fail(handleError)
                .always(hLoading);


        }

        function DuplicarActividad(event,href) {

            event.preventDefault();
            sLoading();
            $.post(href)
                .done(function (result) {
                    if (result.Res) {
                        msgSuccess("Actividad duplicada con exito");
                        //setTimeout(function () { window.location.href = '/Actividades' }, 1000);
                        dt.api().draw('page');
                    } else {

                        msgError("Error al duplicar actividad");
                    }
                })
                .fail(handleError)
                .always(hLoading);


        }

        function showActividadCierreModal(event, href) {
            ajaxModal(event, href, 3, {
                static: true,
                fnShown: function () {
                    $.MMS.ActividadCierre.init();
                },
                fnHidden: function () {
                    dt.api().draw('page');
                }
            });
        }


    </script>
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header bg-blue">
                <table>
                    <tr>
                        <td>
                            <a href="/@controllerName/Create" data-toggle="tooltip" data-placement="bottom" title="Create" class="btn btn-default btn-circle waves-effect waves-circle waves-float @ViewData[$"has_{controllerName}Create"]" onclick="redirtWithReturnSearch(this, event);">
                                <i class="material-icons" style="color:black !important">add</i>
                            </a>
                        </td>
                        <td style="padding-left: 5px;">
                            <a href="/@controllerName/Approve" data-toggle="tooltip" data-placement="bottom" title="Panel de aprobación" class="btn btn-default btn-circle waves-effect waves-circle waves-float @ViewData[$"has_{controllerName}Approve"]" onclick="redirtWithReturnSearch(this, event);">
                                <i class="material-icons" style="color:black !important">thumb_up</i>
                            </a>
                        </td>
                        <td style="padding-left: 10px">
                            <h2>
                                @ViewBag.Title <small>@ViewBag.Subtitle</small>
                            </h2>
                        </td>
                    </tr>
                </table>

            </div>
            <div class="body">
                <table id="tableDT" class="table table-bordered table-striped table-hover dataTable table-condensed table-va-middle table-responsive">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ActividadId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ActividadTitulo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClienteID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UsuarioIdElabora)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ActividadEstado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ActividadFecha)
                            </th>
                            <th style="width:178px;"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <th>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" id="txtActividadId" class="form-control" style="width: 100%;" placeholder="Search @Html.DisplayNameFor(model => model.ActividadId)" />
                                    </div>
                                </div>
                            </th>
                            <th>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" id="txtActividadTitulo" class="form-control" style="width: 100%;" placeholder="Search @Html.DisplayNameFor(model => model.ActividadTitulo)" />
                                    </div>
                                </div>
                            </th>
                            <th>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" id="txtClienteID" class="form-control" style="width: 100%;" placeholder="Search @Html.DisplayNameFor(model => model.ClienteID)" />
                                    </div>
                                </div>
                            </th>
                            <th>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" id="txtUsuarioIdElabora" class="form-control" style="width: 100%;" placeholder="Search @Html.DisplayNameFor(model => model.UsuarioIdElabora)" />
                                    </div>
                                </div>
                            </th>
                            <th>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" id="txtActividadEstado" class="form-control" style="width: 100%;" placeholder="Search @Html.DisplayNameFor(model => model.ActividadEstado)" />
                                    </div>
                                </div>
                            </th>
                            <th>
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" id="txtActividadFecha" class="form-control" style="width: 100%;" placeholder="Search @Html.DisplayNameFor(model => model.ActividadFecha)" />
                                    </div>
                                </div>
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>