@model List<MMS.Models.DisponibilidadDetalleViewModel>

<script type="text/javascript">
    $(document).ready(function () {
        tableDetalle = $("#tableDetalle").dataTable({
            scrollY: '55vh',
            scrollCollapse: true,
            paging: false
        });

        setTimeout(function () {
            tableDetalle.fnAdjustColumnSizing();
        }, 5);
    });
</script>

<div class="modal-header">
    <button type="button" class="close btn-link" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Stock Detail : @ViewBag.ColeccionPIVNombre : (@ViewBag.Item.Marca.Nombre) @ViewBag.Item.Codigo - @ViewBag.Item.Descripcion</h4>
</div>

<div class="modal-body">
    <table id="tableDetalle" class="table table-bordered table-hover table-condensed table-striped table-va-middle">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Usuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Descripcion)
                </th>
                <th style="text-align:right;">
                    @Html.DisplayNameFor(model => model[0].Cantidad)
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Model[i].Fecha
                    </td>
                    <td>
                        @Model[i].Usuario
                    </td>
                    <td>
                        @Model[i].Descripcion
                    </td>
                    <td style="text-align:right;">
                        @Model[i].Cantidad
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />