@model MMS.Models.Usuario

@{
    ViewBag.Title = "Eliminar";
}

<h4>Eliminar</h4>

<h5>¿Desea eliminar el usuario?</h5>
<div class="row">

    <div class="col s12 m7">
        <div class="card">
            <nav>
                <div class="nav-wrapper">
                    <div class="col s12" style="margin-left: 25px;">
                        <a href="~/Usuarios/index" class="breadcrumb">Usuarios</a>
                        <a class="breadcrumb">Eliminar</a>
                    </div>
                </div>
            </nav>
            <div class="card-content">
                <div class="row">
                    <div class="input-field col s6">
                        @Html.LabelFor(model => model.UsuarioId, new { @class = "" })
                        @Html.TextBoxFor(model => model.UsuarioId, new { @class = "active", @readonly = "readonly" })
                    </div>
                    <div class="input-field col s6">
                        @Html.LabelFor(model => model.UsuarioNombre, new { @class = "" })
                        @Html.TextBoxFor(model => model.UsuarioNombre, new { @class = "active", @readonly = "readonly" })
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        @Html.LabelFor(model => model.UsuarioCorreo, new { @class = "" })
                        @Html.TextBoxFor(model => model.UsuarioCorreo, new { @class = "active", @readonly = "readonly", @type = "email", @placeholder = "nombre.apellido@apextoolgroup.com" })
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        @Html.DropDownList("UsuarioPadreId", null, "Seleccione una opción", new { @disabled = "disabled" })
                        @Html.LabelFor(model => model.UsuarioPadreId, new { @class = "" })
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">

                        @if (Model.Usuarioactivo == true)
                        {
                            @Html.TextBoxFor(model => model.Usuarioactivo, new { @type = "checkbox", @value = Model.Usuarioactivo, @checked = "checked", @disabled = "disabled" })
                        }
                        else
                        {
                            @Html.TextBoxFor(model => model.Usuarioactivo, new { @type = "checkbox", @value = Model.Usuarioactivo, @disabled = "disabled" })
                        }
                        @Html.LabelFor(model => model.Usuarioactivo, htmlAttributes: new { @class = "", @for = "Usuarioactivo" })
                    </div>
                </div>

            </div>
            <div class="card-action">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <input type="submit" value="Eliminar" class="btn btn-default btn waves-effect red" /> 
                                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn waves-effect grey" })
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>




