@model MMS.Models.TipoProducto
@{
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
}

@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/Catalogos/TipoProductos.js"></script>

<script type="text/javascript">
    $.MMS.TipoProductos.init = function () {
        $.MMS.TipoProductos("details");
    };
</script>



    <div class="modal-header">
        <button type="button" class="close btn-link" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">View Type of product</h4>
    </div>

    <div class="modal-body" id="bodyForm">
        <div class="row clearfix">
       
            <div class="col-md-12">
                <div class="form-group form-float">
