@model MMS.Models.CentroCosto
@{
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
}

@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/Catalogos/CentroCostos.js"></script>

<script type="text/javascript">
    $.MMS.CentroCostos.init = function () {
        $.MMS.CentroCostos("create");
    };
</script>

@using (Html.BeginForm("Create", "api/" + controllerName, FormMethod.Post, new { id = "frmCentroCosto" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <button type="button" class="close btn-link" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Create Centro de Costo</h4>
    </div>

    <div class="modal-body">
        <div class="row clearfix">
            <div class="col-md-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.EditorFor(model => model.CentroCostoID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.LabelFor(model => model.CentroCostoID, htmlAttributes: new { @class = "form-label" })
                    </div>
                    @Html.ValidationMessageFor(model => model.CentroCostoID, "", new { @class = "" })
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.EditorFor(model => model.CentroCostoDesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.LabelFor(model => model.CentroCostoDesc, htmlAttributes: new { @class = "form-label" })
                    </div>
                    @Html.ValidationMessageFor(model => model.CentroCostoDesc, "", new { @class = "" })
                </div>
            </div>
        </div>
    </div>

    <hr class="m-b-0 m-t--10" />

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary waves-effect">Save</button>
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancel</button>
    </div>
}