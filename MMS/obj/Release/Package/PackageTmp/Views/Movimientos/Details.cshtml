@model  IEnumerable<MMS.Models.Movimiento>

@{
    ViewBag.Title = "Movimientos";
    ViewBag.Subtitle = "Details";
    Layout = "~/Views/Shared/_LayoutTT.cshtml";
}

@section Styles
{
    @Styles.Render("~/bundles/cssDataTables")
}

@section Scripts
{
    @Scripts.Render("~/bundles/jsDataTables")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="/Content/dist/plugins/jquery-inputmask/jquery.inputmask.bundle.js"></script>
    <script src="~/Scripts/jquery.number/jquery.number.js" type="text/javascript"></script>
    <script src="~/Scripts/Transacciones/Movimientos.js" type="text/javascript"></script>

    @if (Model != null)
    {
        <script type="text/javascript">
            /*
             * Insert = 1,
             * Update = 2,
             * Delete = 3,
             * Display = 4
             */
            var Estados = @Html.Raw(Json.Encode(@ViewBag.MovimientoEstado));
            var TipoMov = @Html.Raw(Json.Encode(@ViewBag.TipoMovConfig));
            var dataList = @Html.Raw(Json.Encode(Model.ToList()));
            var TrnMode = 4;
            var UltimaLinea = @Model.Max(m => m.MovimientoLinea);
        </script>
    }
}


<div class="row clearfix">
    <div class="col-md-12">
        <div class="card" id="cardForm">
            <div class="header bg-blue">
                <h2>
                    @ViewBag.Title <small>@ViewBag.Subtitle</small>
                </h2>
            </div>

            @if (Model != null)
            {
                <div class="body">

                    @*<form class="col s12">*@
                    <div class="row clearfix">
                        <div class="col-md-3">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.FirstOrDefault().MovimientoId, new { htmlAttributes = new { @class = "form-control validate", @readonly = "readonly" } })
                                    @Html.LabelFor(model => model.FirstOrDefault().MovimientoId, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.FirstOrDefault().MovimientoId, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-3 m-t--15">
                            <div class="form-group">
                                @Html.LabelFor(model => model.FirstOrDefault().TipoMovimientoID, htmlAttributes: new { @class = "form-select-label m-b-0" })
                                @Html.DropDownList("TipoMovimientoID", null, new { @class = "ms form-control m-t--5 mat" })
                                @Html.ValidationMessageFor(model => model.FirstOrDefault().TipoMovimientoID, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.FirstOrDefault().MovimientoFechaCrea, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = DateTime.Today.ToString("u").Substring(0, 10) } })
                                    @Html.LabelFor(model => model.FirstOrDefault().MovimientoFechaCrea, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.FirstOrDefault().MovimientoFechaCrea, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.FirstOrDefault().MovimientoFechaMod, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = DateTime.Today.ToString("u").Substring(0, 10) } })
                                    @Html.LabelFor(model => model.FirstOrDefault().MovimientoFechaMod, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.FirstOrDefault().MovimientoFechaMod, "", new { @class = "" })
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-md-3">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.FirstOrDefault().UsuarioIdModifica, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = ViewBag.UsuarioIdModifica } })
                                    @Html.LabelFor(model => model.FirstOrDefault().UsuarioIdModifica, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.FirstOrDefault().UsuarioIdModifica, "", new { @class = "" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" id="TotCant" class="form-control" disabled="disabled" />
                                    <label class="form-label">Total Cant.</label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input type="text" id="TotVrl" class="form-control" disabled="disabled" />
                                    <label class="form-label">Total Vlr</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-md-12 m-b-0">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextAreaFor(model => model.FirstOrDefault().MovimientoNota, new { @class = "form-control", @rows = "3", @readonly="readonly" })
                                    @Html.LabelFor(model => model.FirstOrDefault().MovimientoNota, htmlAttributes: new { @class = "form-label" })
                                </div>
                                @Html.ValidationMessageFor(model => model.FirstOrDefault().MovimientoNota, "", new { @class = "" })
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-md-12 m-b-0">
                            <input type="text" id="nroTableMovProductos" name="nroTableMovProductos" style="display: none" value="0" />
                            <h5>Productos</h5>
                            <table id="TableMovProductos" class="table table-condensed table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Producto</th>
                                        <th>Desc</th>
                                        <th>Valor</th>
                                        <th>Cantidad</th>
                                        <th>Estado</th>
                                        <th>Mov. Entrada</th>
                                        <th>Mov. Dispo.</th>
                                        <th>Linea</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    @*</form>*@
                </div>
                <hr class="m-b-0 m-t--20" />
                <div class="body">
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default waves-effect", @onclick = "redirToReturnSearch(this, event)", @id = "btnCancelMov" })
                </div>
            }
            else
            {
                <div class="body">
                    <h4>@ViewBag.Error</h4>
                </div>
                <hr class="m-b-0 m-t--20" />
                <div class="body">
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default waves-effect", @onclick = "redirToReturnSearch(this, event)", @id = "btnCancelMov" })
                </div>
            }

        </div>
    </div>
</div>

<div class="modal fade" id="productosModal" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

<div id="movModal"></div>