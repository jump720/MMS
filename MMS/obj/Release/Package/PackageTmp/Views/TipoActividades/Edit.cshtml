@model MMS.Models.TipoActividad

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col s12 m8 l8 push-l2 push-m2">
            <div class="card">
                <nav>
                    <div class="nav-wrapper">
                        <div class="col s12" style="margin-left: 25px;">
                            <a href="~/TipoActividades/index" class="breadcrumb">Tipo de Actividades</a>
                            <a class="breadcrumb">Editar</a>
                        </div>
                    </div>
                </nav>
                @if (Model != null)
                {
                    <div class="card-content">
                        <span id="" class="red-text text-darken-2">@ViewBag.Error</span>
                        @Html.ValidationSummary(true, "", new { @class = "red-text text-accent-4" })
                        @Html.HiddenFor(model => model.TipoActividadID)
                        <form class="col s12">
                            <div class="row">
                                <div class="input-field col s12 m12 l12">
                                    @Html.LabelFor(model => model.TipoActividadID, new { @class = "" })
                                    @Html.TextBoxFor(model => model.TipoActividadID, new { @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.TipoActividadID, "", new { @class = "red-text text-accent-4" })
                                </div>
                                <div class="input-field col s12 m12 l12">
                                    @Html.LabelFor(model => model.TipoActividadDesc, new { @class = "" })
                                    @Html.EditorFor(model => model.TipoActividadDesc, new { htmlAttributes = new { @class = "validate" } })
                                    @Html.ValidationMessageFor(model => model.TipoActividadDesc, "", new { @class = "red-text text-accent-4" })
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-action">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn waves-effect light-blue accent-4" />
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn waves-effect grey" })
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card-content">
                        <h4>@ViewBag.Error</h4>
                    </div>
                    <div class="card-action">
                        <div class="form-group">
                            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn waves-effect grey" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}