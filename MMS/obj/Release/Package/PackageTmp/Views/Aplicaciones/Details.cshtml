@model MMS.Models.AplicacionesViewModel
@{
    ViewBag.Title = "Apps";
    ViewBag.Subtitle = "View";
    Layout = "~/Views/Shared/_LayoutTT.cshtml";
}

@section Scripts
{
    @Scripts.Render("~/bundles/jsDataTables")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Seguridad/Aplicaciones.js"></script>

    <script type="text/javascript">
        $(function () {
            $.MMS.Aplicaciones("details");
        });
    </script>
}

<div class="row clearfix">
    <div class="col-md-12">
        <div class="card" id="cardForm">
            <div class="header bg-blue">
                <h2>
                    @ViewBag.Title <small>@ViewBag.Subtitle</small>
                </h2>
            </div>
            <div class="body">
                @Html.ValidationSummary(true, "", new { @class = "hide" })
                @Html.HiddenFor(model => model.Aplicacion.Id)

                <div class="row clearfix">
                    <div class="col-md-4">
                        <div class="form-group form-float">
                            <div class="form-line">
                                @Html.EditorFor(model => model.Aplicacion.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.LabelFor(model => model.Aplicacion.Nombre, htmlAttributes: new { @class = "form-label" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group form-float">
                            <div class="form-line">
                                @Html.EditorFor(model => model.Aplicacion.Link, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.LabelFor(model => model.Aplicacion.Link, htmlAttributes: new { @class = "form-label" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group form-float">
                            <div class="form-line">
                                @Html.EditorFor(model => model.Aplicacion.Inicio, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.LabelFor(model => model.Aplicacion.Inicio, htmlAttributes: new { @class = "form-label" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Aplicacion.Activo)
                        @Html.LabelFor(model => model.Aplicacion.Activo, htmlAttributes: new { @class = "fix-checkbox" })
                    </div>

                    <div class="col-md-12">
                        <table class="table table-condensed table-hover table-striped table-va-middle" id="tableObjetos">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Objetos[0].ObjetoId)</th>
                                    <th>@Html.DisplayNameFor(model => model.Objetos[0].Seleccionado)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Objetos.Count; i++)
                                {
                                    <tr>

                                        <td>
                                            @Html.HiddenFor(model => model.Objetos[i].ObjetoId)
                                            @Model.Objetos[i].ObjetoId
                                        </td>
                                        <td>
                                            @Html.EditorFor(model => model.Objetos[i].Seleccionado, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.LabelFor(model => model.Objetos[i].Seleccionado, " ", htmlAttributes: new { @class = "fix-checkbox" })
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <hr class="m-b-0 m-t--20" />
            <div class="body">
                @Html.ActionLink("Modify", "Edit", new { id = Model.Aplicacion.Id }, new { @class = "btn btn-success waves-effect " + ViewData[$"has_{ViewContext.RouteData.Values["controller"].ToString()}Edit"] })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default waves-effect", @onclick = "redirToReturnSearch(this, event)" })
            </div>
        </div>
    </div>
</div>