@model IEnumerable<MMS.Models.Cliente>

@{
    Layout = null;
}
<script src="~/Scripts/DataTablesGeneral.js" type="text/javascript"></script>
<div class="modal-content">
    <table id="modalTable" class="display highlight cell-border compact hover responsive nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.ClienteID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClienteRazonSocial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ciudad.CiudadDesc)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="5%" class="center-align">
                        <button style="transform: scaleY(0.7) scaleX(0.7)" id="BtnEliminar" type="button"
                                class="btn-floating waves-effect waves-light green center-align"
                                aria-hidden="true" onclick="selectCliente('@item.ClienteNit')">
                            <i class="material-icons center-align">done</i>
                        </button>
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.ClienteID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClienteRazonSocial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ciudad.CiudadDesc)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <input id="btncancelar" type="button" value="Cerrar" class="btn waves-effect grey" onclick="$('#_Modal').closeModal();" />
</div>