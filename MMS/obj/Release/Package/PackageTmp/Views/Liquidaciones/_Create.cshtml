@model MMS.Models.Liquidacion
@{
    string controllerName = ViewContext.RouteData.Values["controller"].ToString();
}

@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/PIV/Liquidaciones.js"></script>

<script type="text/javascript">
    $.MMS.Liquidaciones.init = function () {
        $.MMS.Liquidaciones("create");
    };
</script>

@using (Html.BeginForm("Create", "api/" + controllerName, FormMethod.Post, new { id = "frmLiquidacion" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-header">
        <button type="button" class="close btn-link" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Create Settlement</h4>
    </div>

    <div class="modal-body">
        <div class="row clearfix">
            @Html.HiddenFor(model => model.Estado)
            @Html.HiddenFor(model => model.FechaInicial)
            @Html.HiddenFor(model => model.FechaFinal)

            <div class="col-md-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "form-label" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <div class="form-line">
                        @Html.Label("From", new { @class = "form-select-label" })
                        @Html.DropDownList("MonthFrom", null, "- Month -", new { @class = "ms form-control" })
                    </div>
                    <span class="field-validation-valid" data-valmsg-for="MonthFrom" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <div class="form-line">
                        <label class="form-select-label">&nbsp;</label>
                        @Html.DropDownList("YearFrom", null, "- Year -", new { @class = "ms form-control" })
                    </div>
                    <span class="field-validation-valid" data-valmsg-for="YearFrom" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <div class="form-line">
                        @Html.Label("Till", new { @class = "form-select-label" })
                        @Html.DropDownList("MonthTill", null, "- Month -", new { @class = "ms form-control" })
                    </div>
                    <span class="field-validation-valid" data-valmsg-for="MonthTill" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <div class="form-line">
                        <label class="form-select-label">&nbsp;</label>
                        @Html.DropDownList("YearTill", null, "- Year -", new { @class = "ms form-control" })
                    </div>
                    <span class="field-validation-valid" data-valmsg-for="YearTill" data-valmsg-replace="true"></span>
                </div>
            </div>
        </div>
    </div>

    <hr class="m-b-0 m-t--10" />

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary waves-effect">Save</button>
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancel</button>
    </div>
}