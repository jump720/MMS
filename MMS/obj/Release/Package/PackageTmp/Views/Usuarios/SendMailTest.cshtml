@model MMS.Models.SendMailTest
@{
    ViewBag.Title = "Send Mail";
    ViewBag.Subtitle = "Test";
    Layout = "~/Views/Shared/_LayoutTT.cshtml";
}



@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
 
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row clearfix">
        <div class="col-md-12">
            <div class="card" id="cardForm">
                <div class="header bg-blue">
                    <h2>
                        @ViewBag.Title <small>@ViewBag.Subtitle</small>
                    </h2>
                </div>
                <div class="body">
                    @Html.ValidationSummary(false, "", new { @class = "hide" })

                    <div class="row clearfix">
                        <div class="col-md-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.To, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.To, htmlAttributes: new { @class = "form-label" })
                                    @Html.ValidationMessageFor(model => model.To, "", new { @class = "" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.ToName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.ToName, htmlAttributes: new { @class = "form-label" })
                                    @Html.ValidationMessageFor(model => model.ToName, "", new { @class = "" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "form-label" })
                                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    @Html.TextAreaFor(model => model.Message, 4, 0, new { @class = "form-control no-resize", @placeholder = "Message..." })
                                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "" })

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <hr class="m-b-0 m-t--20" />
                <div class="body">
                    <input type="submit" value="Send" class="btn btn-primary waves-effect" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default waves-effect", @onclick = "redirToReturnSearch(this, event)" })
                </div>
            </div>
        </div>
    </div>
}