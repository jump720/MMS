                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade " id="Canales_tab">
                            <div class="col-md-12">
                                <table class="table table-condensed table-hover table-striped table-va-middle" id="tableCanales">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.Canales[0].CanalId)</th>
                                            <th>@Html.DisplayNameFor(model => model.Canales[0].Seleccionado)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int ci = 0; ci < Model.Canales.Count; ci++)
                                        {
                                            <tr>

                                                <td>
                                                    @*@Html.EditorFor(model => model.Objetos[i].ObjetoId, new { htmlAttributes = new { @class = "form-control", @readonly= "readonly" } })*@
                                                    @Html.HiddenFor(model => model.Canales[ci].CanalId)
                                                    @Html.HiddenFor(model => model.Canales[ci].CanalNombre)
                                                    @Model.Canales[ci].CanalNombre
                                                </td>
                                                <td>
                                                    @Html.EditorFor(model => model.Canales[ci].Seleccionado, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.LabelFor(model => model.Canales[ci].Seleccionado, " ", htmlAttributes: new { @class = "fix-checkbox" })
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="m-b-0 m-t--20" />
                <div class="body">
                    <input type="submit" value="Save" class="btn btn-primary waves-effect" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default waves-effect", @onclick = "redirToReturnSearch(this, event)" })
                </div>
            </div>
        </div>
    </div>
}



