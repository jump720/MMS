                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int pi = 0; pi < Model.Plantas.Count; pi++)
                                        {
                                            <tr>

                                                <td>
                                                    @*@Html.EditorFor(model => model.Objetos[i].ObjetoId, new { htmlAttributes = new { @class = "form-control", @readonly= "readonly" } })*@
                                                    @Html.HiddenFor(model => model.Plantas[pi].PlantaId)
                                                    @Html.HiddenFor(model => model.Plantas[pi].PlantaNombre)
                                                    @Model.Plantas[pi].PlantaNombre
                                                </td>
                                                <td>
                                                    @Html.EditorFor(model => model.Plantas[pi].Seleccionado, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.LabelFor(model => model.Plantas[pi].Seleccionado, " ", htmlAttributes: new { @class = "fix-checkbox" })
