@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col s10">
            <div class="card">
                <nav>
                    <div class="nav-wrapper">
                        <div class="col s12" style="margin-left: 25px;">
                            <a href="~/Gastos/index" class="breadcrumb">Gastos</a>
                            <a class="breadcrumb">Editar</a>
                        </div>
                    </div>
                </nav>
                @if (Model != null)
                {



                    <div class="card-content">
                        <span id="" class="red-text text-darken-2">@ViewBag.Error</span>
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.TipoGastoID)
                        <form class="col s10">
                            <div class="row">
                                <div class="input-field col s2">
                                    @Html.LabelFor(model => model.GastoId, new { @class = "" })
                                    @Html.TextBoxFor(model => model.GastoId, new { @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.GastoId, "", new { @class = "red-text text-accent-4" })
                                </div>
                                <div class="input-field col s2">
                                    @Html.LabelFor(model => model.GastoLinea, new { @class = "" })
                                    @Html.TextBoxFor(model => model.GastoLinea, new { @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.GastoLinea, "", new { @class = "red-text text-accent-4" })
                                </div>

                                <div class="input-field col s3">
                                    @Html.LabelFor(model => model.GastoFecha, new { @class = "" })
                                    @Html.TextBoxFor(model => model.GastoFecha, new { @readonly = "readonly", Value = Model.GastoFecha.ToString("u").Substring(0, 10) })
                                    @Html.ValidationMessageFor(model => model.GastoFecha, "", new { @class = "red-text text-accent-4" })
                                </div>
                                <div class="input-field col s3">
                                    @Html.LabelFor(model => model.GastoFechaMod, new { @class = "" })
                                    @Html.TextBoxFor(model => model.GastoFechaMod, new { @readonly = "readonly", Value = Model.GastoFechaMod.ToString("u").Substring(0, 10) })
                                    @Html.ValidationMessageFor(model => model.GastoFechaMod, "", new { @class = "red-text text-accent-4" })
                                </div>
                                <div class="input-field col s2">
                                    @Html.LabelFor(model => model.GastoEstado, new { @class = "" })
                                    @Html.TextBoxFor(model => model.GastoEstado, new { @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.GastoEstado, "", new { @class = "red-text text-accent-4" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s2">
                                    @Html.LabelFor(model => model.ActividadId, new { @class = "" })
                                    @Html.TextBoxFor(model => model.ActividadId, new { @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.ActividadId, "", new { @class = "red-text text-accent-4" })
                                </div>
                                <div class="input-field col s4">
                                    <label for="ActividadTitulo">Titulo</label>
                                    <input class="texttip form-control input-sm" id="ActividadTitulo"
                                           name="" placeholder="Titulo" readonly="readonly"
                                           type="text" value="@ViewBag.Actividad.ActividadTitulo" />
                                </div>
                                <div class="input-field col s4">
                                    <label for="Cliente">Cliente</label>
                                    <input class="texttip form-control input-sm" id="Cliente"
                                           name="" placeholder="Cliente" readonly="readonly"
                                           type="text" value="@ViewBag.Actividad.ClienteID  - @ViewBag.Actividad.cliente.ClienteRazonSocial" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col l12 m12 s12">
                                    @Html.LabelFor(model => model.GastoComentario, new { @class = "" })
                                    @Html.TextAreaFor(model => model.GastoComentario, new { @class = "materialize-textarea" })
                                    @Html.ValidationMessageFor(model => model.GastoComentario, "", new { @class = "red-text text-accent-4" })
                                </div>
                               
                            </div>

                            <div class="row">
                                <div class="input-field col l2 m2 s12">
                                    @Html.LabelFor(model => model.ProductoId, new { @class = "" })
                                    @Html.TextBoxFor(model => model.ProductoId, new { @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.ProductoId, "", new { @class = "red-text text-accent-4" })
                                </div>
                                <div class="input-field col l4 m4 s12 ">
                                    <label for="ProductoDesc">Desc.</label>
                                    <input class="texttip form-control input-sm" id="ProductoDesc"
                                           name="" placeholder="Desc" readonly="readonly"
                                           type="text" value="@ViewBag.Producto.ProductoDesc" />
                                </div>
                                <div class="input-field col l2 m2 s12  ">
                                    @Html.LabelFor(model => model.GastoFactura, new { @class = "" })
                                    @Html.TextBoxFor(model => model.GastoFactura, new { @class = "" })
                                    @Html.ValidationMessageFor(model => model.GastoFactura, "", new { @class = "red-text text-accent-4" })
                                </div>
                                <div class="input-field col l2 m2 s12">
                                    @Html.LabelFor(model => model.GastoValor, new { @class = "" })
                                    @Html.TextBoxFor(model => model.GastoValor, new { })
                                    @Html.ValidationMessageFor(model => model.GastoValor, "", new { @class = "red-text text-accent-4" })
                                </div>
                                <div class="input-field col l2 m2 s12">
                                    @Html.LabelFor(model => model.GastoCant, new { @class = "" })
                                    @Html.TextBoxFor(model => model.GastoCant, new { type = "Number" })
                                    @Html.ValidationMessageFor(model => model.GastoCant, "", new { @class = "red-text text-accent-4" })
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-action">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn waves-effect light-blue accent-4" />
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn waves-effect grey" })
                            </div>
                        </div>
                    </div>

                }
                else
                {
                    <div class="card-content">
                        <h4>@ViewBag.Error</h4>
                    </div>
                    <div class="card-action">
                        <div class="form-group">
                            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn waves-effect grey" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

