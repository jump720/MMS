
@{
    ViewBag.Title = "Acceso Denegado";
}
@*<center>*@

    <div class="container ">
        <div class="card horizontal Medium">
            <div class="card-image valign-wrapper">
                <img src="~/Content/Images/AccessDenied.png">
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <span class="card-title red-text">Acceso Denegado</span>
                    <p><b>Usuario Actual:</b> @ViewBag.UsuarioId</p>
                    <p><b>Objeto:</b> @ViewBag.ObjetoId</p>
                    <p>Ingrese como un usuario diferente o Comuniquese con el administrador.</p>                    
                </div>
                <div class="card-action">
                    <a href="~/Home/Home" class="red-text">Regresar al Inicio</a>
                </div>
            </div>
        </div>
    </div>
@*</center>*@