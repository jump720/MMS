@model IEnumerable<MMS.Models.Producto>

@{
    Layout = null;
}
<script src="~/Scripts/DataTablesGeneral.js" type="text/javascript"></script>
@*<div id="_Modal" class="modal bottom-sheet" style="z-index:1500">*@
<div>
    <h4>Seleccione Producto</h4>
    <table id="modalTable" class="table table-condensed table-va-middle table-striped display highlight cell-border compact hover responsive nowrap table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductoId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductoDesc)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="5%" class="center-align">
                        <a href="javascript:void(0)" class="btn-table bg-green btn-sm btn-sm-circle waves-circle waves-effect waves-float"
                           onclick="selectProductos('@item.ProductoId','@item.ProductoDesc','@item.TipoProductoID')">
                            <i class="material-icons">done</i>
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductoDesc)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@*</div>*@